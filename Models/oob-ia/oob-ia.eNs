#2d - adjacent reversed open bigrams
create string_split bg4split
bg4split set_source bg4_str_rep
bg4split set_chunk 2

#3 - link resulting bigrams to those created by bigramf df 

#3a - adjacent bigrams
create equiv_conversion bg1tobgf
